---
import { Icon } from "astro-icon/components";
import LinkWithIcon from "../components/atoms/LinkWithIcon.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex h-screen">
    <nav class="flex justify-center items-center flex-col">
      <div class="bg-[#3da9fc] h-full w-1"></div>
      <ul class="px-6 py-12 space-y-8">
        <li><LinkWithIcon href="/" icon="house-line" /></li>
        <li><LinkWithIcon href="/" icon="pencil-simple-line" /></li>
        <li><LinkWithIcon href="/" icon="github-logo" /></li>
        <li><LinkWithIcon href="/" icon="twitter-logo" /></li>
      </ul>
      <div class="bg-[#3da9fc] h-full w-1"></div>
    </nav>
    <main class="flex-grow">
      <slot />
    </main>
  </body>
</html>
