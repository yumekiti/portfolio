---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import iconImage from "../../assets/icon.png";
---

<div class="h-screen w-full lg:w-9/12 mx-auto flex flex-col justify-center py-6">
  <h2 class="text-3xl lg:text-4xl font-bold px-4 lg:px-0">About</h2>
  <div class="grid grid-cols-1 lg:grid-cols-2 py-6 px-4 lg:px-0">
    <ul class="space-y-4 flex flex-col justify-center order-last lg:order-first">
      <li>
        <h2 class="text-xl lg:text-2xl text-[#3DA9FC] font-bold">Email</h2>
        <p class="text-2xl lg:text-4xl">yumekiti@hoge.hoge</p>
      </li>
      <li class="flex space-x-2">
        <div class="h-12 w-12 rounded-full bg-[#330000]"></div>
        <div class="h-12 w-12 rounded-full bg-[#330000]"></div>
        <div class="h-12 w-12 rounded-full bg-[#330000]"></div>
      </li>
    </ul>
    <div class="flex justify-center items-center py-16">
      <Image src={iconImage} alt="icon" class="w-[80%] rounded-full shadow-[80px_-60px_0px_-50px] lg:shadow-[160px_-120px_0px_-80px] shadow-[#3DA9FC] lg:shadow-[#3DA9FC]" />
    </div>
  </div>
</div>
